#include<iostream>
 using namespacestd;
class smallest
{
private:
int x,y;
public:
void getdata();
void showdata();
};
void smallest ::getdata()
{
cout<<"Enter the first no:";
cin>>x;
cout<<"Enter the second no:";
cin>>y;
}
void smallest ::showdata()
{
if(x>y)
cout<<"Smallest is:"<<y<<endl;
else
cout<<"Smallest is:"<<x<<endl;
}
int main()
{
smallest s;
s.getdata();
s.showdata();
return 0;
}

